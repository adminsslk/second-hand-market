@using SecondHandMarket.Database
@using SecondHandMarket.Web.ViewModels.Admin
@model SalesViewModel

<script src="~/js/admin/_SalesForm.js"></script>

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h2 class="modal-title">FÖRSÄLJNING</h2>
        </div>

        <div class="modal-body">                
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon min-width-100">VARA</div>
                    <div >
                        <input id="item" class="form-control min-width-400 " type="text" value="" autocomplete="off">
                    </div>
                    <span class=" input-group-btn">
                        <button id="add-item" class="btn btn-default" type="button"><span class="glyphicon glyphicon-plus"></span> LÄGG TILL...</button>
                    </span>
                </div>

            </div>
            <div id="body">

            </div>

            <br /><br />
            <div id="error-message" class="hidden alert alert-danger"></div>
        </div>

        <div class="modal-footer">
            <button id="save-button" type="button" class="btn btn-primary" disabled>REGISTRERA FÖRSÄLJNING</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">AVBRYT</button>
        </div>
    </div>
</div>

<script>
    var itemDescriptions = [];

    @{
        foreach (string item in Model.ItemDescriptions)
        {
            @:itemDescriptions.push('@Html.Raw(item)');
        }
    }
    $('#item').typeahead({
        source: itemDescriptions,
        showHintOnFocus: true
    });

</script>




