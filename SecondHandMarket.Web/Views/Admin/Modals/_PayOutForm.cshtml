@using SecondHandMarket.Database
@using SecondHandMarket.Web.ViewModels.Admin
@model PayOutViewModel


<script src="~/js/admin/_PayOutForm.js"></script>

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h2 class="modal-title">UTBETALNING</h2>
        </div>

        <div class="modal-body">
            <div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">MOBILNUMMER</div>
                        <input id="salesman-phone" class="form-control numeric-textbox" type="text" onfocus="this.select();" value="@Model.Phone">
                    </div>

                </div>
            </div>
            <br />
            <hr />
            <div id="sold-items">


            </div>
        </div>

        <div class="modal-footer">
            <button id="save-payed-out" type="button" class="btn btn-primary" onclick="changeItemStatus()" disabled>REGISTRERA VAROR SOM UTBETALDA</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">AVBRYT</button>
        </div>
    </div>
</div>

<script>
    var phonenumbers = [];

    @{
        foreach (string phone in Model.PhoneNumbers)
        {
            @:phonenumbers.push('@Html.Raw(phone)');
        }
    }
    $('#salesman-phone').typeahead({
        source: phonenumbers,
        showHintOnFocus: true
    });

</script>



